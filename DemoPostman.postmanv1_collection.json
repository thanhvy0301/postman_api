			"name": "CreateBooking",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"\r",
							"const apiName = pm.collectionVariables.get(\"apiName\");\r",
							"pm.environment.set(\"createStatus\", pm.response.code);\r",
							"if(pm.response.code===200){\r",
							"        let responseData = pm.response.json();\r",
							"        pm.test(\"Check value Lastname\", function(){\r",
							"        pm.expect(responseData.lastname).to.be.a('undefined').and.to.not.be.null;\r",
							"        });\r",
							"        pm.test(\"Check value Totalprice\", function(){\r",
							"        pm.expect(responseData.totalprice).to.be.a('undefined').and.to.not.be.null;\r",
							"        });\r",
							"        let bookingId = parseInt(responseData.bookingid);\r",
							"        pm.collectionVariables.set(\"bookingId\", bookingId);\r",
							"        console.log(\"BookingId has been saved: \" + bookingId);\r",
							"        let stCodeCreate = pm.response.code;\r",
							"        pm.collectionVariables.set(\"stCodeCreate\", stCodeCreate);\r",
							"        console.log(\"Status code CreateBooking has been saved: \" + bookingId);\r",
							"    }\r",
							"    else if(pm.response.code!==200){\r",
							"        pm.test(\"Status code is 400\", function () {\r",
							"        pm.response.to.have.status(400);\r",
							"        });\r",
							"    }\r",
							"\r",
							"\r",
							"\r",
							"\r",
							""
